<body>

  <div class="container">
    <div class="d-flex justify-content-center">
      <div>
        <h2>New Event?</h2>
        <p>Tell us about you</p>
        <form action="/create" method="POST">
          <input type='text' name="creatorName" placeholder='Your name' />
          <input type='text' name="creatorEmail" placeholder='Your email' />
          <p>Tell us about your event</p>
          <input type='text' name="eventTitle" placeholder='title' />
          <br />
          <textarea type='text' name="eventDescription" placeholder='description'>
          </textarea>
          <p>select some available times</p>
          <p>PICK THE DATE AND TIME</p>
          <!-- dateTimePicker -->
          <div class="dateTime">
            <div class="d-flex justify-content-center">
              <div id="dateTimePicker" name="startDate"></div>
              <div id="dateTimePicker2" name="endDate"></div>
            </div>
          </div>
          <button class="btn btn-primary addTime" type="button" value="Add">add</button>
