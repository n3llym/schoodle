<body id="body">
  <% include ./header %>
  <div id="page-layout">
    <div class="success-page">
      <h1>Congratulations!</h1>
      <h2 class="event-created">Event Created</h2>
      <div id="attendeeURL">
        <h3>Your event link:</h3>
        <p>Send this link to all your guests</p>
        <p>
          <input type="text" id="attendee-url" value="http://localhost:8080/event/attendee/<%=eventURL%>" disabled>

          <button class="copy-button" onclick="copyToClipboard('#attendee-url')">Copy</button>
        </p>
        <script>
          function copyToClipboard(element) {
            var $temp = $("<input>");
            $("body").append($temp);
            $temp.val($(element).val()).select();
            document.execCommand("copy");
            $temp.remove();
          }
        </script>
      </div>

      <div id="ownerURL">
        <h3>Your private organiser link:</h3>
        <p>Don't share this link!</p><p>Use it to make any changes to your event</p>
        <p>
          <input type="text" id="owner-url" value="http://localhost:8080/event/organiser/<%=ownerURL%>" disabled>
          <button class="copy-button" onclick="copyToClipboard('#owner-url')">Copy</button>
          <p>or</p>
          <a id="owner-link" href="http://localhost:8080/event/organiser/<%=ownerURL%>"
            target="_blank">Visit Your Organiser Page</a>
        </p>
      </div>
      <div class="to-note">

      <p class="warningMSG"><i class="fas fa-exclamation-triangle"></i>  Please save the links before you leave or refresh
        this page  <i class="fas fa-exclamation-triangle"></i></p>
      </div>

    </div>
</body>

</html>
