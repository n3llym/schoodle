<body id="body">
  <% include ./header %>
  <div id="page-layout">
    <form action="" method="GET">
      <h2>Let <%=data[0].name %> know you're availability to attend their event <%=data[0].title %> </h2>

      <div>
        <p>Need a little more information about the event?</p><span><%=data[0].title %></span>
        <p>says....</p><span><%=data[0].description %></span>
      </div>
    </form>

    <div>
      <table>"table showing everyones availability"
        <tr>
          <th>Attendees</th>
          <% for (const info in timeslots) { %>
          <th>From <%=timeslots[info].start_date_time.toString().slice(0,21) %> To
            <%=timeslots[info].end_date_time.toString().slice(0,21) %>
          </th>
          <% } %>
        </tr>
        <% let names=[] %>
        <% if (! attendees) { %>
        <tr>
          No one accepted yet! :(
        </tr>
        <%} else {%>

        <% for (const attendee of attendees) { %>
        <% if (!names.includes(attendee.name)) {%>
        <% names.push(attendee.name) %>
        <tr>
          <th><%=attendee.name %></th>
          <% for (const ts in timeslots) { %>
          <% if(timeslots[ts].attendees.includes(attendee.name)) { %>
          <th>checked</th>
          <% } else { %>
          <th>not checked</th>
          <% } %>
          <% } %>
        </tr>
        <% } %>
        <% } %>
        <% } %>
      </table>
      <button name="modify">M</button>
      <button name="modify">M</button>
    </div>
    <div name="add-new-availability">
      <p>Firstly tell us little about yourself</p>
      <form method="POST" action="/event">
        <input type="text" name="attendeeName" placeholder="Your Name">
        </input>
        <input type="text" name="attendeeEmail" placeholder="Your Email">
        </input>
        <button name="add-availability">Add</button>
      </form>
      <table>
        table to select availability....
      </table>

    </div>
